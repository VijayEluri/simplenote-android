<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.simplenote.android" 
    android:versionCode="2" android:versionName="1.1">
  <application android:label="@string/app_name" android:icon="@drawable/snlogo">
    <uses-library android:name="android.test.runner"/>
    <activity android:name=".SimpleNote" android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".NoteEdit" />
    <activity android:name=".LoginDialog"
      android:label="@string/menu_login" android:theme="@android:style/Theme.Dialog" />
    <activity android:name=".Preferences" android:label="@string/menu_preferences" />
    <receiver android:process=":remote" android:name="AlarmReceiver"/>
  </application>
  <uses-sdk android:minSdkVersion="3"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <instrumentation android:name="android.test.InstrumentationTestRunner"
      android:targetPackage="com.simplenote.android" android:label="Tests for My App"/>
</manifest>
