<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_syncing"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
  <ImageView android:id="@+id/notificaiton_syncing_icon"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:src="@drawable/snlogo">
  </ImageView>
  <TextView
      android:id="@+id/notification_syncing_title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/status_syncing_title"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="#FF000000" />
  <TextView
      android:id="@+id/notification_syncing_description"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/status_syncing_description"
      android:textSize="15sp"
      android:textColor="#FF000000" />
</LinearLayout>