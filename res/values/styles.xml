<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Themes -->
  <style name="NoTitleDialogTheme" parent="@android:style/Theme.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="Theme.SimpleNote" parent="@android:Theme">
    <item name="android:windowBackground">@drawable/background</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <!-- Basic Styles -->
  <style name="FullWidth">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="FillParent">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>
  <style name="Shadowed">
    <item name="android:shadowDx">1.1</item>
    <item name="android:shadowDy">1.1</item>
    <item name="android:shadowRadius">1.1</item>
  </style>
  <style name="Shadowed.Down">
    <item name="android:shadowDx">1.0</item>
  </style>
  <!-- Basic Buttons -->
  <style name="Shadowed.Button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
  </style>
  <style name="Shadowed.Button.Blue">
    <item name="android:background">@drawable/blue_button</item>
    <item name="android:textColor">@color/blue_button_color</item>
    <item name="android:shadowColor">@color/blue_button_shadow_color</item>
  </style>
  <style name="Shadowed.Button.Black">
    <item name="android:background">@drawable/black_button</item>
    <item name="android:textColor">@color/black_button_color</item>
    <item name="android:shadowColor">@color/black_button_shadow_color</item>
  </style>
  <!-- Splash Styles -->
  <style name="Shadowed.SplashHeader">
    <item name="android:gravity">top</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/header_color</item>
    <item name="android:shadowColor">@color/header_shadow_color</item>
    <item name="android:textSize">50dip</item>
    <item name="android:textScaleX">0.9</item>
  </style>
  <style name="SplashLogo">
    <item name="android:layout_width">100.6666666dip</item>
    <item name="android:layout_height">100.6666666dip</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">25dip</item>
  </style>
  <style name="Shadowed.SplashText">
    <item name="android:layout_marginTop">30dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/splashtext_color</item>
    <item name="android:shadowColor">@color/splashtext_shadow_color</item>
  </style>
  <!-- Splash Button Styles -->
  <style name="Shadowed.Button.Splash">
    <item name="android:layout_marginTop">18dip</item>
    <item name="android:layout_marginRight">35dip</item>
    <item name="android:layout_marginBottom">0dip</item>
    <item name="android:layout_marginLeft">35dip</item>
    <item name="android:layout_height">60sp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">sans</item>
  </style>
  <style name="Shadowed.Button.Splash.Blue">
    <item name="android:background">@drawable/blue_button</item>
    <item name="android:textColor">@color/blue_button_color</item>
    <item name="android:shadowColor">@color/blue_button_shadow_color</item>
  </style>
  <style name="Shadowed.Button.Splash.Black">
    <item name="android:layout_marginTop">6dip</item>
    <item name="android:layout_marginBottom">5dip</item>
    <item name="android:background">@drawable/black_button</item>
    <item name="android:textColor">@color/black_button_color</item>
    <item name="android:shadowColor">@color/black_button_shadow_color</item>
  </style>
  <!-- Note List -->
  <style name="FullWidth.NoteList">
    <item name="android:dividerHeight">0dip</item>
  </style>
  <style name="Shadowed.Down.NoteRowTitle">
    <item name="android:layout_width">150dip</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:padding">10dip</item>
    <item name="android:maxLines">1</item>
    <item name="android:lines">1</item>
    <item name="android:maxLength">@integer/titleMaxChars</item>
    <item name="android:background">@drawable/bg_note_title</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/note_title_color</item>
    <item name="android:shadowColor">@color/note_title_shadow_color</item>
  </style>
  <style name="Shadowed.Down.NoteRowDate">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">right|center_vertical</item>
    <item name="android:layout_gravity">top</item>
    <item name="android:paddingTop">10dip</item>
    <item name="android:paddingRight">10dip</item>
    <item name="android:paddingBottom">10dip</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:background">@drawable/bg_note_date</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/blue_button_color</item>
    <item name="android:shadowColor">@color/blue_button_shadow_color</item>
  </style>
  <!-- No Notes -->
  <style name="NoNotesImage">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">80.5dip</item>
    <item name="android:layout_marginLeft">20dip</item>
    <item name="android:src">@drawable/bg_no_notes</item>
  </style>
  <style name="Shadowed.NoNotesText">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">0.5dip</item>
    <item name="android:textSize">22sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/no_notes_text</item>
    <item name="android:shadowColor">@color/no_notes_shadow</item>
  </style>
  <!-- Edit Note Styles -->
  <style name="FullWidth.NoteEditTitle">
    <item name="android:padding">0px</item>
    <item name="android:background">@drawable/bg_note_trash</item>
  </style>
  <style name="Shadowed.Down.NoteRowTitle.Edit">
    <item name="android:layout_height">fill_parent</item>
    <item name="android:background">@drawable/bg_note_title_edit</item>
  </style>
  <style name="NoteTrash">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:src">@drawable/trash</item>
    <item name="android:gravity">right|center_vertical</item>
    <item name="android:layout_gravity">top</item>
    <item name="android:paddingTop">10dip</item>
    <item name="android:paddingRight">18dip</item>
    <item name="android:paddingBottom">10dip</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:background">@drawable/note_body_edit</item>
  </style>
  <style name="NoteBodyScroll">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:background">@drawable/note_body</item>
  </style>
  <style name="NoteBody">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">top</item>
    <item name="android:inputType">text|textAutoCorrect|textCapSentences|textMultiLine</item>
    <item name="android:textSize">15.375sp</item>
    <item name="android:padding">20dip</item>
    <item name="android:background">@drawable/note_body_edit</item>
    <item name="android:textColor">@color/note_body_color</item>
  </style>
  <!-- Dialog Styles -->
  <style name="DialogLabel">
    <item name="android:layout_marginTop">10dip</item>
    <item name="android:layout_marginRight">10dip</item>
    <item name="android:layout_marginBottom">7dip</item>
    <item name="android:layout_marginLeft">10dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">left</item>
    <item name="android:maxLines">1</item>
  </style>
  <!-- Input Styles -->
  <style name="Input">
    <item name="android:layout_marginRight">10dip</item>
    <item name="android:layout_marginLeft">10dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">left</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColorHint">@color/hint_color</item>
  </style>
  <style name="Input.Password">
    <item name="android:autoText">false</item>
    <item name="android:capitalize">none</item>
    <item name="android:imeOptions">actionGo</item>
    <item name="android:inputType">textPassword</item>
  </style>
  <style name="Input.Email">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:inputType">textEmailAddress</item>
  </style>
  <style name="Input.Splash">
    <item name="android:layout_marginTop">13dip</item>
    <item name="android:layout_marginRight">35dip</item>
    <item name="android:layout_marginBottom">0dip</item>
    <item name="android:layout_marginLeft">35dip</item>
    <item name="android:background">@drawable/edit_text</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_height">45sp</item>
  </style>
  <style name="Input.Splash.Password">
    <item name="android:autoText">false</item>
    <item name="android:capitalize">none</item>
    <item name="android:imeOptions">actionGo</item>
    <item name="android:imeActionLabel">@string/signin</item>
    <item name="android:inputType">textPassword</item>
    <!-- FIXME: This isn't forcing a sans-serif so it is set in code in SimpleNoteSplash.java -->
    <item name="android:typeface">sans</item>
  </style>
  <style name="Input.Splash.Email">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:inputType">textEmailAddress</item>
  </style>
</resources>