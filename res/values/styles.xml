<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Themes -->
  <style name="NoTitleDialogTheme" parent="@android:style/Theme.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="Theme.SimpleNote" parent="@android:Theme">
    <item name="android:windowBackground">@drawable/background</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <!-- Splash Styles -->
  <style name="SplashHeader">
    <item name="android:gravity">top</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/header_color</item>
    <item name="android:shadowColor">@color/header_shadow_color</item>
    <item name="android:shadowDx">1.1</item>
    <item name="android:shadowDy">1.1</item>
    <item name="android:shadowRadius">1.1</item>
    <item name="android:textSize">75px</item>
    <item name="android:textScaleX">0.9</item>
  </style>
  <style name="SplashLogo">
    <item name="android:layout_width">151px</item>
    <item name="android:layout_height">151px</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">25dip</item>
  </style>
  <style name="TextAsLabelInputBlur" />
  <style name="TextAsLabelInputFocus" />
  <!-- Dialog Styles -->
  <style name="DialogLabel">
    <item name="android:layout_marginTop">10dip</item>
    <item name="android:layout_marginRight">10dip</item>
    <item name="android:layout_marginBottom">7dip</item>
    <item name="android:layout_marginLeft">10dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">left</item>
    <item name="android:maxLines">1</item>
  </style>
  <style name="DialogButton">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_gravity">right</item>
    <item name="android:layout_marginTop">7dip</item>
    <item name="android:layout_marginRight">10dip</item>
    <item name="android:layout_marginBottom">10dip</item>
    <item name="android:paddingTop">10dip</item>
    <item name="android:paddingRight">15dip</item>
    <item name="android:paddingBottom">15dip</item>
    <item name="android:paddingLeft">15dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Input Styles -->
  <style name="Input">
    <item name="android:layout_marginRight">10dip</item>
    <item name="android:layout_marginLeft">10dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">left</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColorHint">@color/hint_color</item>
  </style>
  <style name="Input.Password">
    <item name="android:autoText">false</item>
    <item name="android:capitalize">none</item>
    <item name="android:imeOptions">actionGo</item>
    <item name="android:inputType">textPassword</item>
  </style>
  <style name="Input.Email">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:inputType">textEmailAddress</item>
  </style>
  <style name="Input.Splash">
    <item name="android:layout_marginTop">15dip</item>
    <item name="android:layout_marginRight">35dip</item>
    <item name="android:layout_marginBottom">0dip</item>
    <item name="android:layout_marginLeft">35dip</item>
    <item name="android:background">@drawable/edit_text</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_height">45sp</item>
  </style>
  <style name="Input.Splash.Password">
    <item name="android:layout_marginBottom">15dip</item>
    <item name="android:autoText">false</item>
    <item name="android:capitalize">none</item>
    <item name="android:imeOptions">actionGo</item>
    <item name="android:inputType">textPassword</item>
  </style>
  <style name="Input.Splash.Email">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:inputType">textEmailAddress</item>
  </style>
  <!-- Button Styles -->
  <style name="Button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
  </style>
  <style name="Button.Splash">
    <item name="android:layout_marginTop">0dip</item>
    <item name="android:layout_marginRight">35dip</item>
    <item name="android:layout_marginBottom">0dip</item>
    <item name="android:layout_marginLeft">35dip</item>
  </style>
  <style name="Button.Splash.Blue">
    <item name="android:background">@drawable/blue_button</item>
  </style>
  <!-- List styles -->
  <style name="FullWidth">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
</resources>